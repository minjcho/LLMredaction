# Set to "true" to allow Gemini API calls for LLM-based detection
ALLOW_REMOTE_LLM=false

# Fernet key for envelope encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=

# Admin key for restore endpoint
ADMIN_KEY=changeme

# Document TTL in seconds (default: 3600 = 1 hour)
DOC_TTL_SEC=3600

# Gemini API key (required for /chat and llm detector)
GEMINI_API_KEY=
